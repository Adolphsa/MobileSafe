<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zividig.mobilesafe">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/mobile_safe"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        <activity android:name=".activity.SplashActivity" android:theme="@style/MyAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.MobileSafe"/>
        <activity android:name=".activity.Setting"/>
        <activity android:name=".activity.GuideActivity1"/>
        <activity android:name=".activity.GuideActivity2"/>
        <activity android:name=".activity.GuideActivity3"/>
        <activity android:name=".activity.GuideActivity4"/>
        <activity android:name=".activity.ChoseContact"/>

        <!--定位服务-->
        <service android:name=".activity.service.LocationService"/>

        <!--开机自启动的广播-->
        <receiver android:name=".activity.receiver.BootComplete">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!--接收短信的广播-->
        <receiver android:name=".activity.receiver.SmsReceiver">
            <intent-filter
                android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
</manifest>