<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/GuideTitleStyle"
        android:text="手机防盗"
        android:gravity="center"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textSize="18sp"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textSize="18sp"
            android:padding="3dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#a000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textSize="18sp"
            android:padding="3dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/unlock"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#a000"/>
    <RelativeLayout
        android:id="@+id/rl_ms_again_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新进入设置向导"
            android:textSize="18sp"
            android:padding="3dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#a000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="功能介绍"
        android:textSize="20sp"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        />
    <TextView
    style="@style/GuideTextViewStyle"
    android:text="GPS追踪:#*location*#"
    />
    <TextView
        style="@style/GuideTextViewStyle"
        android:text="播放报警音乐:#*alarm*#"
        />
    <TextView
        style="@style/GuideTextViewStyle"
        android:text="远程删除数据:#*wipedata*#"
        />
    <TextView
        style="@style/GuideTextViewStyle"
        android:text="远程锁屏:#*lockscreen*#"
        />

</LinearLayout>